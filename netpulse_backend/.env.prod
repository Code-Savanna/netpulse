# .env.prod

# Database Configuration
# Uses the service name 'db' from docker-compose.prod.yml
DATABASE_URL=postgresql://netpulse:password@db:5432/netpulse

# Redis Configuration
# Uses the service name 'redis' from docker-compose.prod.yml
REDIS_URL=redis://redis:6379/0

# Celery Configuration
# Uses the service name 'rabbitmq' for the broker
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security
SECRET_KEY=a_very_secret_key_for_production_please_change_me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Monitoring & Features
LOG_LEVEL=INFO
